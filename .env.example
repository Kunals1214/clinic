# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mediflow?schema=public"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
JWT_SECRET="your-jwt-secret-key-change-in-production"

# Encryption (AES-256)
ENCRYPTION_KEY="your-32-character-encryption-key"
ENCRYPTION_IV="your-16-character-iv-key"

# Redis (for caching and session management)
REDIS_URL="redis://localhost:6379"

# Email (SendGrid for HIPAA compliance)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
FROM_EMAIL="noreply@mediflow.com"

# SMS (Twilio with BAA)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Payment Gateway (Stripe PCI-DSS Level 1)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Telemedicine (Twilio Video)
TWILIO_API_KEY_SID="your-api-key-sid"
TWILIO_API_KEY_SECRET="your-api-key-secret"

# AWS (for HIPAA-compliant file storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="mediflow-documents"

# Application
NODE_ENV="development"
APP_URL="http://localhost:3000"
APP_NAME="MediFlow"

# Audit Logging
AUDIT_LOG_RETENTION_DAYS="2555" # 7 years for HIPAA compliance

# Rate Limiting
RATE_LIMIT_WINDOW="15" # minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Session Management
SESSION_TIMEOUT="30" # minutes
MAX_SESSION_AGE="8" # hours

# MFA
MFA_ISSUER="MediFlow"
MFA_WINDOW="1" # Time step window for TOTP

# File Upload
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,dcm"

# FHIR Server (optional)
FHIR_SERVER_URL="https://your-fhir-server.com"

# HL7 Integration (optional)
HL7_SERVER_HOST="localhost"
HL7_SERVER_PORT="2575"

# Clearinghouse (for insurance claims)
CLEARINGHOUSE_API_URL="https://api.changehealthcare.com"
CLEARINGHOUSE_API_KEY="your-clearinghouse-api-key"

# Pharmacy Network (Surescripts)
SURESCRIPTS_API_URL="https://api.surescripts.com"
SURESCRIPTS_API_KEY="your-surescripts-api-key"
